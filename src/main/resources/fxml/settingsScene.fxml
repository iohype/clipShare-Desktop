                        <String fx:value="toggle-btn" />
                        <String fx:value="text-dark" />
                     </styleClass>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </JFXToggleButton>
               </children>
            </HBox>
